<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Order
      <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("Order by Wage Lower Bound", jobs_path(:order => "by_lower_bonud")) %>
    </li>
    <li>
      <%= link_to("Order by Wage Upper Bound", jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("Order by Publish Time", jobs_path) %>
    </li>
  </ul>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>Job Need</td>
      <td>Wage Lower Bound</td>
      <td>Wage Upper Bound</td>
      <td>Publish Time</td>
    </tr>

  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
        <td>
          <%= link_to(job.title, job_path(job)) %>
        </td>
        <td>
          <%= job.wage_lower_bound %>
        </td>
        <td>
          <%= job.wage_upper_bound %>
        </td>
        <td>
          <%= job.created_at %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>
